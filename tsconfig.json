{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                   // Changed from "Node16" to "ESNext"
    "moduleResolution": "Node",           // Changed from "Node16" to "Node"
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "declaration": true,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}