{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",                   // Changed from "ESNext" to "Node16"
    "moduleResolution": "Node16",         // Must match "module"
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "declaration": true,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}