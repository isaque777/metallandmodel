{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "node16",
    "target": "es2022",
    "moduleResolution": "node16",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "inlineSources": true,
    "composite": true
  },
  "include": [
    "src/**/*.ts",
    "src/app/models/__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}